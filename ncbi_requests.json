{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["request_id", "operation"],
  "properties": {
    "request_id": {
      "type": "string",
      "format": "uuid"
    },
    "operation": {
      "type": "string",
      "enum": ["search", "fetch", "summary", "link", "elink", "efetch", "esummary", "esearch", "genome_metadata", "gene_metadata"]
    },
    "database": {
      "type": "string",
      "enum": ["gene", "pubmed", "protein", "nucleotide", "genome", "taxonomy", "biosample", "bioproject", "assembly", "clinvar", "dbvar", "gds", "geoprofiles", "homologene", "mesh", "nlmcatalog", "omim", "pmc", "popset", "proteinclusters", "snp", "sra", "structure", "toolkit", "unigene"]
    },
    "term": {
      "type": "string",
      "description": "Search query for esearch operation"
    },
    "filters": {
      "type": "object",
      "properties": {
        "organism": {
          "type": "string",
          "description": "Filter by organism"
        },
        "date_range": {
          "type": "object",
          "properties": {
            "start": {
              "type": "string",
              "format": "date"
            },
            "end": {
              "type": "string",
              "format": "date"
            }
          }
        },
        "field": {
          "type": "string",
          "description": "Specific field to search in"
        }
      }
    },
    "ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of IDs for fetch/summary operations"
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Fields to return in the response"
    },
    "pagination": {
      "type": "object",
      "properties": {
        "retstart": {
          "type": "integer",
          "minimum": 0
        },
        "retmax": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    },
    "format": {
      "type": "string",
      "enum": ["json", "xml"],
      "default": "json"
    },
    "organism": {
      "type": "string",
      "description": "Organism name for genome metadata requests"
    },
    "gene_id": {
      "type": "string",
      "description": "NCBI gene ID for gene metadata requests"
    },
    "symbol": {
      "type": "string",
      "description": "Gene symbol for gene metadata requests"
    },
    "taxon": {
      "type": "string",
      "description": "Taxon name for gene metadata requests"
    },
    "format_output": {
      "type": "boolean",
      "description": "Whether to format the output using dataformat CLI",
      "default": false
    }
  }
}
